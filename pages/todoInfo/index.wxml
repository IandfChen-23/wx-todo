<!--pages/todoInfo/index.wxml-->
<view >
  <view class="title">
    <text >
        {{task.title}}
    </text>
  </view>
  <view>
    <image src='{{task.image}}'></image>
  </view>
  <text wx:if='{{task.location}}'>位置：{{task.location.name}}</text>
  <view>
    完成进度：
    <progress percent="{{task.percent}}" show-info />
    <input placeholder='请输入0-100以内的数字' bindinput='setPercent'></input>
    <button bindtap='submit' style='margin-top:40px'>提交</button>
  </view>
</view>